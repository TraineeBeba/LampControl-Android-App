<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@android:id/background"
        android:height="16dp"
        android:bottom="7dp"
        android:top="7dp">
        <shape android:shape="rectangle">
            <solid android:color="#B8B8CC"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <item
        android:id="@android:id/background"
        android:height="16dp"
        android:bottom="7dp"
        android:top="7dp">

        <clip android:clipOrientation="horizontal"
            android:gravity="left">

            <shape android:shape="rectangle">
                <gradient
                    android:angle="270"
                    android:startColor="#B8B8CC"
                    android:endColor="#7E9DAC"
                    android:type="linear"/>
                <corners android:radius="8dp"/>
            </shape>
        </clip>
    </item>

</layer-list>