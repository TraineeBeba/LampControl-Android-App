<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment">


    <FrameLayout
        android:id="@+id/homeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/homescreen__background_off">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/sunshine"
                    android:layout_width="230dp"
                    android:layout_height="230dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="60dp"
                    android:layout_marginTop="70dp"
                    android:src="@drawable/sunshine"
                    android:visibility="visible"
                    android:alpha="0"
                    />

                <ImageView
                    android:id="@+id/cloud_left_white"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/cloud_right_white"

                    android:visibility="visible"
                    />

                <ImageView
                    android:id="@+id/cloud_right_white"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="90dp"
                    android:src="@drawable/cloud_left_white"
                    android:visibility="visible"
                    />

                <ImageView
                    android:id="@+id/cloud_left_black"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/cloud_right_black"
                    android:visibility="visible"
                    />

                <ImageView
                    android:id="@+id/cloud_right_black"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="90dp"
                    android:src="@drawable/cloud_left_black"
                    android:visibility="visible"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/image_turn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/turn_off_image"
                    />

                <Button
                    android:id="@+id/Button_on"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="#00FFFFFF"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/aa"

                    />

            </RelativeLayout>


            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_alignParentBottom="true"

                    android:src="@drawable/home_menu" />


                <View
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:background="#2A2C34" />


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:paddingLeft="60dp"
                android:paddingRight="60dp"
                android:paddingBottom="10dp">

                <Button
                    android:id="@+id/button_home"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/aa"
                    android:background="#00FFFFFF"
                    />

                <Button
                    android:id="@+id/button_light"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/aa"
                    android:background="#00FFFFFF"
                    />

                <Button
                    android:id="@+id/button_wifi"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/aa"
                    android:background="#00FFFFFF"
                    />
            </LinearLayout>

        </RelativeLayout>
    </FrameLayout>




</androidx.constraintlayout.widget.ConstraintLayout>