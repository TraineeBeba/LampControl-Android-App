<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.LightFragment">
    <FrameLayout
        android:id="@+id/lightLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fone_for_wifi">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible">
                <RelativeLayout
                    android:id="@+id/panelMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-230dp"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/modeImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="0dp"
                        android:src="@drawable/mode_one_on" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="500dp"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="10dp"
                            android:gravity="center">
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/colorBtn1_1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/circle_fone1" />
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/colorBtn2_1"
                                android:layout_marginLeft="30dp"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/circle_fone2" />
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/colorBtn3_1"
                                android:layout_marginLeft="30dp"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/circle_fone3" />
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/colorBtn4_1"
                                android:layout_marginLeft="30dp"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/circle_fone4" />
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/colorBtn5_1"
                                android:layout_marginLeft="30dp"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/circle_fone5" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="10dp"
                            android:gravity="center">
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/colorBtn6_1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/circle_fone6" />
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/colorBtn7_1"
                                android:layout_marginLeft="30dp"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/circle_fone7" />
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/colorBtn8_1"
                                android:layout_marginLeft="30dp"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/circle_fone8" />
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/colorBtn9_1"
                                android:layout_marginLeft="30dp"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/circle_fone9" />
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/colorBtn10_1"
                                android:layout_marginLeft="30dp"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/circle_fone10" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="10dp"
                            android:gravity="center">
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/colorBtn11_1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/circle_fone11" />
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/colorBtn12_1"
                                android:layout_marginLeft="30dp"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/circle_fone12" />
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/colorBtn13_1"
                                android:layout_marginLeft="30dp"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/circle_fone13" />
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/colorBtn14_1"
                                android:layout_marginLeft="30dp"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/circle_fone14" />
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/colorBtn15_1"
                                android:layout_marginLeft="30dp"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/circle_fone15" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingLeft="0dp"
                        android:paddingRight="0dp"
                        android:paddingTop="320dp">
                        <Button
                            android:id="@+id/button_one_color"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:background="#00FFFFFF"
                            android:contentDescription="@string/aa"
                            />
                        <Button
                            android:id="@+id/button_rainbow"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:background="#00FFFFFF"
                            android:contentDescription="@string/aa"
                            />
                        <Button
                            android:id="@+id/button_data_night"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:background="#00FFFFFF"
                            android:contentDescription="@string/aa" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/groupActiveColors1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="190dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingTop="220dp"
                        android:visibility="visible">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/activeColorBtnMode1_1"
                            android:layout_marginLeft="110dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/circle_fone1" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/groupActiveColors2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="190dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingTop="220dp"
                        android:visibility="invisible">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/activeColorBtnMode2_1"
                            android:layout_marginLeft="230dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/circle_active_fone1_1" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/activeColorBtnMode2_2"
                            android:layout_marginLeft="10dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/circle_active_fone2_1" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/activeColorBtnMode2_3"
                            android:layout_marginLeft="10dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/circle_active_fone2_2" />
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/activeColorBtnMode2_4"
                            android:layout_marginLeft="10dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/circle_active_fone2_4" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/groupActiveColors3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="190dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingTop="220dp"
                        android:visibility="invisible">
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/activeColorBtnMode3_1"
                            android:layout_marginLeft="110dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/circle_active_fone3_1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <Button
                            android:id="@+id/addColorBtn"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_marginTop="210dp"
                            android:layout_marginLeft="50dp"
                            android:layout_marginRight="50dp"
                            android:layout_weight="1"
                            android:backgroundTint="#00FFFFFF"
                            android:contentDescription="@string/aa" />
                    </LinearLayout>
                </RelativeLayout>



                <RelativeLayout
                    android:id="@+id/panelAddColor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:visibility="invisible">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/panel_add_color" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="10dp"
                            android:gravity="center">
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/colorBtn6_2"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/circle_fone6" />
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/colorBtn7_2"
                                android:layout_marginLeft="30dp"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/circle_fone7" />
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/colorBtn8_2"
                                android:layout_marginLeft="30dp"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/circle_fone8" />
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/colorBtn9_2"
                                android:layout_marginLeft="30dp"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/circle_fone9" />
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/colorBtn10_2"
                                android:layout_marginLeft="30dp"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/circle_fone10" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="10dp"
                            android:gravity="center">
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/colorBtn11_2"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/circle_fone11" />
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/colorBtn12_2"
                                android:layout_marginLeft="30dp"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/circle_fone12" />
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/colorBtn13_2"
                                android:layout_marginLeft="30dp"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/circle_fone13" />
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/colorBtn14_2"
                                android:layout_marginLeft="30dp"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/circle_fone14" />
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/colorBtn15_2"
                                android:layout_marginLeft="30dp"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/circle_fone15" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        xmlns:custom="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:context=".MainActivity"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <com.github.mata1.simpledroidcolorpicker.pickers.CircleColorPicker

                            custom:hue="120"
                            custom:saturation="1.0"
                            custom:value="1.0"
                            custom:ringWidth="50dp"
                            android:id="@+id/rcp1"
                            android:visibility="visible"
                            android:padding="10dp"
                            android:background="#00aaffdd"
                            android:layout_width="280dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:layout_height="0dp"

                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="120dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="130dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/fixColor"
                            android:layout_marginLeft="10dp"
                            android:layout_width="140dp"
                            android:layout_height="80dp"
                            android:layout_weight="5"
                            android:clickable="false"
                            android:focusable="false"

                            android:contentDescription="@string/aa" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="370dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/buttonChangeColor"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:layout_weight="5"
                            android:background="#00FFFFFF"
                            android:contentDescription="@string/aa" />
                        <Button
                            android:id="@+id/backToPanelModeBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:layout_marginLeft="100dp"
                            android:layout_weight="1"
                            android:background="#00FFFFFF"
                            android:contentDescription="@string/aa" />
                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_marginBottom="150dp"
                android:layout_alignParentBottom="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/seekBar"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="40dp"
                    android:text="Яскравість"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp" />
                <TextView
                    android:id="@+id/textviewbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/seekBar"
                    android:layout_marginBottom="8dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp" />
                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:progress="0"
                    android:max="9"
                    android:splitTrack="false"
                    android:layout_marginHorizontal="12dp"
                    android:thumb = "@drawable/seekbar_thump"
                    android:progressDrawable="@drawable/seekbar_progress"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/mode_menu" />
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_alignParentBottom="true"
                        android:background="#2A2C34" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="bottom"
                    android:paddingLeft="60dp"
                    android:paddingRight="60dp"
                    android:paddingBottom="10dp">
                    <Button
                        android:id="@+id/button_home"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/aa"
                        android:background="#00FFFFFF"
                        />
                    <Button
                        android:id="@+id/button_light"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/aa"
                        android:background="#00FFFFFF"
                        />
                    <Button
                        android:id="@+id/button_wifi"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/aa"
                        android:background="#00FFFFFF"
                        />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>