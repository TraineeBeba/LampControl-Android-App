<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".frame.WifiFrame">

    <FrameLayout
        android:id="@+id/mainLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fone_for_wifi">


            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_alignParentBottom="true"

                    android:src="@drawable/wifi_menu" />


                <View
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:background="#2A2C34" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:paddingLeft="60dp"
                android:paddingRight="60dp"
                android:paddingBottom="10dp">

                <Button
                    android:id="@+id/button_home"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/aa"
                    android:background="#00FFFFFF"
                    />

                <Button
                    android:id="@+id/button_light"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/aa"
                    android:background="#00FFFFFF"
                    />

                <Button
                    android:id="@+id/button_wifi"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/aa"
                    android:background="#00FFFFFF"
                    />
            </LinearLayout>

        </RelativeLayout>

    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>